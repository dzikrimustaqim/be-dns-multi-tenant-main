{
  "name": "dns-multi-tenant-api",
  "version": "1.0.0",
  "description": "DNS Multi-tenant REST API backend with Node.js, Express, Sequelize and PostgreSQL using schema per tenant",
  "license": "Proprietary - Only for use by Pesantren Darunnajah",
  "private": true,
  "copyright": "Â© 2025 Mifta Digital Solusi",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:migrate": "node src/utils/migrator.js --schema=public migrate",
    "db:migrate:status": "node src/utils/migrator.js --schema=public status",
    "db:migrate:undo": "node src/utils/migrator.js --schema=public undo",
    "db:migrate:undo:all": "node src/utils/migrator.js --schema=public undo:all",
    "db:migrate:tenant": "node src/utils/migrator.js --schema=tenant migrate",
    "db:migrate:tenant:all": "node src/utils/migrator.js --schema=tenant --all migrate",
    "db:migrate:tenant:status": "node src/utils/migrator.js --schema=tenant status",
    "db:migrate:tenant:status:all": "node src/utils/migrator.js --schema=tenant --all status",
    "db:migrate:tenant:undo": "node src/utils/migrator.js --schema=tenant undo",
    "db:migrate:tenant:undo:all": "node src/utils/migrator.js --schema=tenant undo:all",
    "db:migrate:tenant:undo:all:all": "node src/utils/migrator.js --schema=tenant --all undo:all",
    "db:seed": "node src/utils/seeder.js --schema=public seed",
    "db:seed:all": "node src/utils/seeder.js --schema=public seed:all",
    "db:seed:undo": "node src/utils/seeder.js --schema=public undo",
    "db:seed:undo:all": "node src/utils/seeder.js --schema=public undo:all",
    "db:seed:tenant": "node src/utils/seeder.js --schema=tenant seed",
    "db:seed:tenant:all": "node src/utils/seeder.js --schema=tenant --all seed:all",
    "db:seed:tenant:undo": "node src/utils/seeder.js --schema=tenant undo",
    "db:seed:tenant:undo:all": "node src/utils/seeder.js --schema=tenant undo:all",
    "db:seed:tenant:undo:all:all": "node src/utils/seeder.js --schema=tenant --all undo:all",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "minimist": "^1.2.8",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "nodejs-base64-encode": "^1.1.0",
    "nodemailer": "^7.0.3",
    "pdfkit": "^0.17.1",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "sequelize-cli": "^6.6.1",
    "umzug": "^3.2.1",
    "winston": "^3.8.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
